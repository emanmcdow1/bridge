<% content_for :title, "Listen" %>
<% meta_tag :description, "Listen page for The Bridge Church. Missed a sermon? Just trying to catch up? Can't make it on Sunday? No problem. All of the sermons are here, so you can listen on the go, or in the comfort of your own home." %>

<h1 class="headr">Listen to any Sermon</h1>
<div class="hblk"></div>
<div class="cont" id="smalltext">
  <p>
    Missed a sermon? Just trying to catch up? Can't make it on Sunday? No problem. All of the sermons are here, so you can listen on the go, or in the comfort of your own home.
  </p>
</div>
<div  class='cont' id='smalltext'>
  <% @sermons.each do |sermon| %>
    <div class="sermon">
      <div>
        <%= link_to image_tag('play.png'), sermon.audio.url, :class => "html5 hvr-float" %>
      </div>
      <div>
        <h1><%= sermon.title %></h1>
        <h3><%= Date.parse(sermon.date).strftime("%e %b %Y") %></h3>
        <h3><%= Date.parse(sermon.date).strftime("%l:%M %P") %></h3>
      </div>
    </div>
  <% end %>
</div>
</div>
<div>
  <section id="audio"> </section>
</div>
