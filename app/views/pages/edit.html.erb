<% @events.each do |event| %>
  <div class="cont evt">
    <%= image_tag event.background.url %>
    <div>
      <h1><%= event.title %></h1>
    </div>
    <div>
      <p><%= event.description %></p>
    </div>

      <div>
        <%= button_to("Delete Event",  { controller: :events, action: "destroy", id: event.id }, method: :delete, data: { confirm: "Are you sure?" }) %>
      </div>
  </div>
<% end %>
